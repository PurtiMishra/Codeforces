By Purti_Mishra, contest: Codeforces Beta Round #65 (Div. 2), problem: (A) Way Too Long Words, Accepted, 
#include <iostream>
 
using namespace std;
 
int main()
{
    int n;
    string s;
    cin >> n;
    while (n--)
    {
        cin >> s;
        if (s.length() > 10)
        {
            cout << s[0] << s.length() - 2 << s[s.length() - 1] << endl;
        }
        else
        {
            cout << s << endl;
        }
    }
    return 0;
}
